<%= link_to '添加员工', new_department_user_path(@department) %>


<table class="table">
  <thead>
    <tr>
      <th>Group</th>
      <th>Name</th>
      <th>Budget</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.group ? user.group.group_name : "未分配的人员" %></td>
        <td><%= link_to user.username, department_user_path(@department, user) %></td>
        <td><%= user.budget %></td>
        <td><%= link_to 'Show', department_user_path(@department, user) %></td>
        <td><%= link_to 'Edit', edit_department_user_path(@department, user) %></td>
        <td><%= link_to 'Destroy', department_user_path(@department, user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

