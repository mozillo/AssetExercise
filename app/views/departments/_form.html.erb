<%= simple_form_for(@department, :url => @department.dept_uuid ? department_path(@department.dept_uuid):@department ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :department_name %>
    <%= f.input :budget %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
