
  <%= simple_form_for(@log) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        
      <%= f.input :user_uuid, 
                  :collection => 
                  User.all.map { 
                    |k,v| 
                    ["#{k.department.department_name} - #{k.username}", k.uuid] }, prompt: "Select Staff"
      %>

      <%= f.input :action_type %>
      <%= f.input :qty %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>